<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorImage" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/basicBlue</item>
        <item name="colorPrimaryVariant">@color/basicBlue</item>
        <item name="colorOnPrimary">@color/basicWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/basicOrange</item>
        <item name="colorSecondaryVariant">@color/yellowNormal</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MainAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_alert_dialog</item>
    </style>

</resources>